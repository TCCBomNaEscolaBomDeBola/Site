@using PagedList.Mvc;
@using PagedList;
@model PagedList.IPagedList<Araretama.BomNaEscolaBomDeBola.Domain.Aluno>
@{
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}
@{
    ViewBag.Title = "Alunos";
}

<h2>Alunos</h2>

<p>
    @Html.ActionLink("Criar novo aluno", "Create")
</p>

<div class="col-md-12">
    <div class="x_panel">
        <div class="x_content">
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12 text-center">
                    <ul class="pagination pagination-split">
                        <li><a href="#">A</a></li>
                        <li><a href="#">B</a></li>
                        <li><a href="#">C</a></li>
                        <li><a href="#">D</a></li>
                        <li><a href="#">E</a></li>
                        <li>...</li>
                        <li><a href="#">W</a></li>
                        <li><a href="#">X</a></li>
                        <li><a href="#">Y</a></li>
                        <li><a href="#">Z</a></li>
                    </ul>
                </div>

                <div class="clearfix"></div>
                @foreach (var item in Model)
                {
                    <div class="col-md-4 col-sm-4 col-xs-12 profile_details">
                        <div class="well profile_view">
                            <div class="col-sm-12">
                                <h4 class="brief"><i>Digital Strategist</i></h4>
                                <div class="left col-xs-7">
                                    <h2>@Html.DisplayFor(modelItem => item.Id) - @Html.DisplayFor(modelItem => item.Nome)</h2>
                                    <p><strong>@Html.DisplayNameFor(model => model.First().Responsavel) </strong>  @Html.DisplayFor(modelItem => item.Responsavel) </p>
                                    <ul class="list-unstyled">
                                        <li><i class="fa fa-building"></i> @Html.DisplayNameFor(model => model.First().DataNasc) : @Html.DisplayFor(modelItem => item.DataNasc) </li>
                                        <li><i class="fa fa-phone"></i> @Html.DisplayNameFor(model => model.First().Escola) : @Html.DisplayFor(modelItem => item.Escola) </li>
                                        <li>
                                            <i class="fa fa-phone"></i>@Html.DisplayNameFor(model => model.First().Contato): @Html.DisplayFor(modelItem => item.Contato))
                                        </li>
                                    </ul>



                                </div>
                                <div class="right col-xs-5 text-center">
                                    <img src="http://www.abrin.com.br/modulos/imagem/fotos/abrin_brassbaby_1611.jpg" alt="" class="img-circle img-responsive">
                                </div>
                            </div>
                            <div class="col-xs-12 bottom text-center">

                                <div class="col-xs-12 col-sm-6 emphasis">
                                    <a class="btn btn-primary" href="@Url.Action("Details", "Aluno" , new { id = item.Id })"><i class="fa fa-plus"></i></a>
                                    <a class="btn btn-warning" href="@Url.Action("Edit", "Aluno" , new { id = item.Id })"><i class="fa fa-pencil"></i></a> 
                           
                                    <a class="btn btn-danger" href="@Url.Action("Delete", "Aluno" , new { id = item.Id })"><i class="fa fa-trash"></i> </a>
                  
                                </div>
                            </div>
                        </div>
                    </div>
                   


                }

            </div>
        </div>
    </div>
</div>
<div>
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
</div>












