@model List<Araretama.BomNaEscolaBomDeBola.Domain.Turma>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}


<!-- page content -->
<div class="center" role="main">
    <!-- top tiles -->
    <div class="row tile_count">
        <div class="col-md-4 col-sm-4 col-xs-4 tile_stats_count">
            <span class="count_top"><i class="fa fa-user"></i> Total de Alunos</span>
            <div class="count">@ViewBag.aluno</div>
        </div>
        <div class="col-md-4 col-sm-4 col-xs-4 tile_stats_count">
            <span class="count_top"><i class="fa fa-heartbeat"></i> Total de Voluntários</span>
            <div class="count">@ViewBag.voluntario</div>
        </div>

        <div class="col-md-4 col-sm-4 col-xs-4 tile_stats_count">
            <span class="count_top"><i class="fa fa-users"></i>Total de Turmas</span>
            <div class="count">@ViewBag.turma</div>
        </div>

    </div>

</div>

<div class="row">

    <div class="col-md-6 col-sm-6 col-xs-12">
        <div class="x_panel tile fixed_height_390">
            <div class="x_title">
                <h2>Alunos Por Turma</h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                    <li>
                        <a class="close-link"><i class="fa fa-close"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <h4>Quantidade de aluno ativos nas turmas</h4>
                @foreach (var i in Model)
                {
                    var valor = i.QuantidadeDeAlunos * 100 / ViewBag.aluno;
                    <div class="widget_summary">
                        <div class="w_left w_25">
                            <span>@i.Nome</span>
                        </div>
                        <div class="w_center w_55">
                            <div class="progress">
                                <div class="progress-bar bg-green" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width:@valor%;">
                                    <span class="sr-only">@i.Nome</span>
                                </div>
                            </div>
                        </div>
                        <div class="w_right w_20">
                            @i.QuantidadeDeAlunos
                        </div>
                    </div>
                }

              

            </div>
        </div>
    </div>

    <div class="col-md-6 col-sm-6 col-xs-12">
        <div class="x_panel tile fixed_height_390">
            <div class="x_title">
                <h2>Voluntários Por Turma</h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                    <li>
                        <a class="close-link"><i class="fa fa-close"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <h4>Quantidade de voluntários ativos nas turmas</h4>
                @foreach (var i in Model)
                {
                    var valor = i.Voluntarios.Count() * 100 / ViewBag.voluntario;
                    <div class="widget_summary">
                        <div class="w_left w_25">
                            <span>@i.Nome</span>
                        </div>
                        <div class="w_center w_55">
                            <div class="progress">
                                <div class="progress-bar bg-green" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width:@valor%;">
                                    <span class="sr-only">@i.Nome</span>
                                </div>
                            </div>
                        </div>
                        <div class="w_right w_20">
                            <span>@i.Voluntarios.Count()</span>
                        </div>
                    </div>
                }



            </div>
        </div>
    </div>




</div>


