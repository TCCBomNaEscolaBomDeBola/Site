@model Araretama.BomNaEscolaBomDeBola.Domain.Voluntario

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Voluntário</h2>
                <div class="alignright ">


                    @using (Html.BeginForm("Delete", "Voluntario", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-actions no-color">
                            <button type="submit" value="Delete" class="btn btn-round btn-danger">
                                <i class="fa fa-trash"></i> Excluir
                            </button>

                        </div>
                    }

                </div>

                <div class="clearfix"></div>
            </div>
            <div class="x_content">

                <section class="content invoice">
                    <!-- title row -->
                    <div class="row">
                        <div class="col-xs-12 invoice-header">
                            <h1>
                                <i class="fa fa-heart"></i>  @Html.DisplayFor(model => model.Nome)

                            </h1>
                        </div>
                        <!-- /.col -->
                    </div>
                    <!-- info row -->
                    <div class="row invoice-info">
                        <div class="col-sm-4 invoice-col">
                            <address>
                                <strong>
                                    @Html.DisplayNameFor(model => model.Contato)
                                </strong>

                                <br>@Html.DisplayFor(model => model.Contato)
                            </address>
                        </div>
                        <!-- /.col -->
                        <div class="col-sm-4 invoice-col">
                            <address>
                                <strong>
                                    @Html.DisplayNameFor(model => model.Email)
                                </strong>

                                <br>@Html.DisplayFor(model => model.Email)
                            </address>
                        </div>
                        <!-- /.col -->
                        <div class="col-sm-4 invoice-col">
                            <address>
                                <strong>
                                    @Html.DisplayNameFor(model => model.Senha)
                                </strong>

                                <br>@Html.DisplayFor(model => model.Senha)
                            </address>
                        </div>



                        <!-- /.col -->
                    </div>
                    <!-- /.row -->
                    @if (Model != null && Model.Turma != null)
                    {
                        if (Model.Turma.Count > 0)
                        {
                            <div class="row">
                                <div class="col-xs-12 table">
                                    <table class="table table-striped">
                                        <thead>
                                            <tr>
                                                <th>Turma</th>
                                                <th>Alunos</th>
                                                <th>Horario Inicial</th>
                                                <th>Horário Final</th>
                                                <th>Dia</th>
                                            </tr>
                                        </thead>
                                        <tbody>

                                            @for (var i = 0; i < Model.Turma.Count; i++)
                                            {
                                                <tr>
                                                    <td>@Html.DisplayFor(model => model.Turma[i].Nome)</td>
                                                    <td>@Html.DisplayFor(model => model.Turma[i].QuantidadeDeAlunos)</td>
                                                    <td>@Html.DisplayFor(model => model.Turma[i].HorarioInicial)</td>
                                                    <td>@Html.DisplayFor(model => model.Turma[i].HorarioFinal)</td>
                                                    <td>@Html.DisplayFor(model => model.Turma[i].DiaSemana)
                                                    <td></td>
                                                </tr>
                                            }



                                        </tbody>
                                    </table>
                                </div>
                            </div>

                        }
                    }
                </section>
            </div>
        </div>
    </div>
</div>

