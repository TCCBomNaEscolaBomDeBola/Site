@using HtmlHelpers.BeginCollectionItem;
@model Araretama.BomNaEscolaBomDeBola.Domain.Turma
<div class="editorRow form-group">
    @using (Html.BeginCollectionItem("Turmas"))
    {
            @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "  control-label col-md-3 col-sm-3 col-xs-12" })
            <div class="col-md-5 col-sm-5 col-xs-11">
                @Html.DropDownListFor(Model => Model.Id, new SelectList(ViewBag.turmas, "Id", "Nome"), new { @class = "form-control col-md-7 col-xs-12" })
                @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-1 col-sm-1 col-xs-1">
                        <a class="btn  btn-danger deleteRow" href="#" id=""><i class="fa fa-trash"></i></a>
            </div>

    }
</div>