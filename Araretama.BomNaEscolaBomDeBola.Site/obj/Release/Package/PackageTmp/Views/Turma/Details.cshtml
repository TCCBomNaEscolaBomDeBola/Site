@model Araretama.BomNaEscolaBomDeBola.Domain.Turma

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Turma</h2>
                <div class="alignright ">
                    <a href="@Url.Action("Edit", "Turma", new { id = Model.Id } )" class="btn btn-round btn-primary">
                        <i class="fa fa-edit"></i>
                        Editar
                    </a>
                    <a href="@Url.Action("Delete", "Turma", new { id = Model.Id } )" class="btn btn-round btn-danger">
                        <i class="fa fa-edit"></i>
                        Excluir
                    </a>
                </div>
             

                <div class="clearfix"></div>
            </div>
            <div class="x_content">

                <section class="content invoice">
                    <!-- title row -->
                    <div class="row">
                        <div class="col-xs-12 invoice-header">
                            <h1>
                                <i class="fa  fa-users"></i>  @Html.DisplayFor(model => model.Nome)

                            </h1>
                        </div>
                        <!-- /.col -->
                    </div>
                    <!-- info row -->
                    <div class="row invoice-info">
                        <div class="col-sm-4 invoice-col">
                            <address>
                                <strong>
                                    @Html.DisplayNameFor(model => model.DiaSemana)
                                </strong>

                                <br>@Html.DisplayFor(model => model.DiaSemana)
                            </address>
                        </div>
                        <!-- /.col -->
                        <div class="col-sm-4 invoice-col">
                            <address>
                                <strong>
                                    @Html.DisplayNameFor(model => model.HorarioInicial)
                                </strong>

                                <br>@Html.DisplayFor(model => model.HorarioInicial)
                            </address>
                        </div>
                        <!-- /.col -->
                        <div class="col-sm-4 invoice-col">
                            <address>
                                <strong>
                                    @Html.DisplayNameFor(model => model.HorarioFinal)
                                </strong>

                                <br>@Html.DisplayFor(model => model.HorarioFinal)
                            </address>
                        </div>
                        <div class="col-sm-4 invoice-col">
                            <address>
                                <strong>
                                    @Html.DisplayNameFor(model => model.IdadeMaxima)
                                </strong>

                                <br>@Html.DisplayFor(model => model.IdadeMaxima)
                            </address>
                        </div>
                        <div class="col-sm-4 invoice-col">
                            <address>
                                <strong>
                                    @Html.DisplayNameFor(model => model.IdadeMinima)
                                </strong>

                                <br>@Html.DisplayFor(model => model.IdadeMinima)
                            </address>
                        </div>
                        <div class="col-sm-4 invoice-col">
                            <address>
                                <strong>
                                    @Html.DisplayNameFor(model => model.QuantidadeDeAlunos)
                                </strong>

                                <br>@Html.DisplayFor(model => model.QuantidadeDeAlunos)
                            </address>
                        </div>



                        <!-- /.col -->
                    </div>
                    <!-- /.row -->
                    <hr />
                    <h2>
                        <i class="fa  fa-user"></i>  Alunos

                    </h2>
                    @if (Model != null && Model.Alunos != null)
                    {
                        if (Model.Alunos.Count > 0)
                        {
                            <div class="row">
                                <div class="col-xs-12 table">
                                    <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap jambo_table" cellspacing="0" width="100%">
                                        <thead>
                                            <tr>
                                                <th>ID</th>
                                                <th>Nome</th>
                                                <th>Nascimento</th>
                                                <th>Escolaridade</th>
                                                <th>Contato</th>
                                                <th>Observação</th>
                                            </tr>
                                        </thead>
                                        <tbody>

                                            @for (var i = 0; i < Model.Alunos.Count; i++)
                                            {
                                                <tr>
                                                    <td>@Html.DisplayFor(model => model.Alunos[i].Id)</td>
                                                    <td>@Html.DisplayFor(model => model.Alunos[i].Nome)</td>
                                                    <td>@Html.DisplayFor(model => model.Alunos[i].DataNasc)</td>
                                                    <td>@Html.DisplayFor(model => model.Alunos[i].Serie)</td>
                                                    <td>@Html.DisplayFor(model => model.Alunos[i].Contato)</td>
                                                    <td>@Html.DisplayFor(model => model.Alunos[i].Observacao)</td>
                                                </tr>
                                            }



                                        </tbody>
                                    </table>
                                </div>
                            </div>

                        }
                    }
                    <hr/>
                    <h2>
                        <i class="fa  fa-heartbeat"></i>  Voluntários

                    </h2>
                    @if (Model != null && Model.Voluntarios != null)
                    {
                        if (Model.Voluntarios.Count > 0)
                        {
                            <div class="row">
                                <div class="col-xs-12 table">
                                    <table id="datatable-responsive2" class="table table-striped table-bordered dt-responsive nowrap jambo_table" cellspacing="0" width="100%">
                                        <thead>
                                            <tr>
                                                <th>ID</th>
                                                <th>Nome</th>
                                                <th>Contato</th>
                                                <th>E-mail</th>

                                            </tr>
                                        </thead>
                                        <tbody>

                                            @for (var i = 0; i < Model.Voluntarios.Count; i++)
                                            {
                                                <tr>
                                                    <td>@Html.DisplayFor(model => model.Voluntarios[i].Id)</td>
                                                    <td>@Html.DisplayFor(model => model.Voluntarios[i].Nome)</td>
                                                    <td>@Html.DisplayFor(model => model.Voluntarios[i].Contato)</td>
                                                    <td>@Html.DisplayFor(model => model.Voluntarios[i].Email)</td>

                                                </tr>
                                            }



                                        </tbody>
                                    </table>
                                </div>
                            </div>

                        }
                    }
                </section>
            </div>
        </div>
    </div>
</div>



